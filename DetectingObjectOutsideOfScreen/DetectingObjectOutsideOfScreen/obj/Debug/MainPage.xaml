<Page
    x:Class="DetectingObjectOutsideOfScreen.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DetectingObjectOutsideOfScreen"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer x:ConnectionId='1'
            x:Name="scrollviewer"
            HorizontalScrollBarVisibility="Visible"
            HorizontalScrollMode="Enabled"
            VerticalScrollBarVisibility="Disabled"
            VerticalScrollMode="Disabled"
                                                    
            ZoomMode="Disabled">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid
                    x:Name="MainPlayerGrid"
                    Width="600"
                    Background="Chartreuse"
                    Column="0">

                    <Grid
                        x:Name="ObjectThatIAmTracking"
                        Height="300"
                        Width="600"
                        Background="BlueViolet" >
                        <TextBlock Text="Object That I What To TRACK"  VerticalAlignment="Center" FontSize="48" TextWrapping="Wrap"/>
                    </Grid>

                </Grid>

                <Hub Grid.Column="1">
                    <HubSection>
                        <HubSection.Header>
                            <Grid
                                Height="700"
                                Width="500"
                                Background="IndianRed">

                                <Grid
                                    x:Name="ObjectThatIWhatToSee"
                                    Height="300"
                                    Width="200"
                                    Background="DarkGoldenrod" Visibility="Collapsed">
                                    <TextBlock Text="Object That I What To See"  VerticalAlignment="Center" FontSize="48" TextWrapping="Wrap"/>
                                </Grid>

                            </Grid>
                        </HubSection.Header>
                    </HubSection>
                    <HubSection>
                        <DataTemplate>
                            <Grid
                                Height="700"
                                Width="500"
                                Background="LightBlue" />
                        </DataTemplate>
                    </HubSection>
                    <HubSection>
                        <DataTemplate>
                            <Grid
                                Height="700"
                                Width="500"
                                Background="DarkOrange" />
                        </DataTemplate>
                    </HubSection>
                    <HubSection>
                        <DataTemplate>
                            <Grid
                                Height="700"
                                Width="500"
                                Background="HotPink" />
                        </DataTemplate>
                    </HubSection>
                </Hub>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

